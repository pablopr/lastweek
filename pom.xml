		<profile>
			<!-- integration environment -->
			<id>integration</id>
			<build>
				<resources>
					<resource>
						<directory>src/main/conf/integration</directory>
					</resource>
				</resources>
			</build>
		</profile>
		<profile>
			<!-- production environment -->
			<id>stable</id>
			<build>
				<resources>
					<resource>
						<directory>src/main/conf/stable</directory>
					</resource>
				</resources>
			</build>
		</profile>
	</profiles>

